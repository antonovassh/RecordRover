@model ShopCartViewModel
<div class="container">
    @foreach (var el in Model.shopCart.listShopItems)
    {
        <div class="alert alert-warning mt-3">
            <b>Plate:</b>@el.plate.name<br />
            <b>Price:</b>@el.plate.price.ToString("c")
        </div>
    }
    <hr />
    <div style="margin-top: 50px;"></div> 
    <div class="btn btn-danger" asp-controller="Order">To pay</div>
</div>